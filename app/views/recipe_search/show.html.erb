<style>
    .card-custom {
        background-color: MediumSeaGreen
    }
    .rcorners1 {
        border-radius: 25px;
        background: #73AD21;
        padding: 20px;
        width: 200px;
        height: 150px;
    }
    .border-primary {
        border-color: black
    }
    .fb-items {
        background-color: lightgreen;
        font-size: 20px
    }
    .header{
        padding-top: 25px;
    }
    .border{
        padding-top: 25px;
        background-color: lightgreen
    }
    .img{
        opacity: 0.85;
    }
    body, html {
        height: 100%;
    }

    .bg {
        /* The image used */
        background-image: url("https://wallpaperaccess.com/full/3662969.jpg");

        /* Full height */
        height: 100%;

        /* Center and scale the image nicely */
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }
    .fixed{
        width:100%;
        height:2000px;
        background-image:url("https://wallpaperaccess.com/full/3662969.jpg");
        background-size:cover;
        background-attachment:fixed;
    }

</style>
<div class="fixed ">
  <center>
    <div id = 'by_name'>
    <br><br><br>
      <h2>Search By Name</h2>
      <%= form_with url: "/recipe_search/index", method: :get, local: true do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %><br><br>

        <%= f.submit "Search" %>
      <% end %>
    </div>
    <br>
    <br>

    <div id = 'by_ingredient'>
      <h2>Search by Ingredients</h2>
      <%= form_with url: "/recipe_search/index", method: :get, local: true do |f| %>
        <%= f.label :ingredient %>
        <%= f.text_field :ingredient1 %> <br>
        <%= f.label :ingredient %>
        <%= f.text_field :ingredient2 %> <br>
        <%= f.label :ingredient %>
        <%= f.text_field :ingredient3 %> <br>
        <%= f.label :ingredient %>
        <%= f.text_field :ingredient4 %> <br>
        <%= f.label :ingredient %>
        <%= f.text_field :ingredient5 %> <br>
        <br>
        <%= f.submit "Search" %>
      <% end %>
    </center>
  </div>
</div>
