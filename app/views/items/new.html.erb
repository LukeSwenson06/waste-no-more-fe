<h2>Add a New Item to Your Fridge</h2>

<%= form_with url: '/items', method: :post, local: true do |f| %>
    <%= f.label :name, "Name:" %>
    <%= f.text_field :name %>
    <%= f.label :expiration_date, "Expiration Date:" %>
    <%= f.date_field :expiration_date, value: Date.today %>
    <%= f.submit 'Submit Item' %>
<% end %>