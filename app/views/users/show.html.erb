
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<center>
<h3>Hello, <%= @user.name %>! Welcome To Your Fridge</h3>
<%= link_to "Add Item", new_item_path %>
<% if @items != [] %>
  <h5>Expired Items</h5>
  <div id='Expired'>
    <ul class="list-group  list-group-flush list-group-flush">
      <div class="container">
        <div class="row align_items_start">
          <div class="col">
            Item
          </div>
          <div class="col">
            Expiration Date
          </div>
          <div class="col">
            
          </div>
        </div>
      </div>
      <% @items.each do |item| %>
        <% if item.days_to_expired(Date.today) <= 0 %>
          <div class="container">
            <div class="row align_items_start">
              <div class="col">
                <li class="list-group-item list-group-item-danger"><%= item.name %></li>
              </div>
              <div class="col">
                <li class="list-group-item list-group-item-danger"><%= item.expiration_date %></li>
              </div>
              <div class="col">
                <li class="list-group-item"> <%= button_to "Delete Item", '/items', method: :delete, params: {id: item.id} %></li>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </ul>
  </div>
  <h5>Expiring Items (Expire within 2 days)</h5>
  <div id='Expiring'>
  <ul class="list-group list-group-flush list-group-flush">
      <div class="container">
        <div class="row align_items_start">
          <div class="col">
            Item
          </div>
          <div class="col">
            Expiration Date
          </div>
          <div class="col">
            
          </div>
        </div>
      </div>
      <% @items.each do |item| %>
        <% if (0 < item.days_to_expired(Date.today)) && (item.days_to_expired(Date.today) <= 2) %>
          <div class="container">
            <div class="row align_items_start">
              <div class="col">
                <li class="list-group-item list-group-item-warning"><%= item.name %></li>
              </div>
              <div class="col">
                <li class="list-group-item list-group-item-warning"><%= item.expiration_date %></li>
              </div>
              <div class="col">
                <li class="list-group-item"> <%= button_to "Delete Item", '/items', method: :delete, params: {id: item.id}  %></li>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </ul>
  </div>
  <h5>Fresh Items</h5>
  <div id='Fresh'>
    <ul class="list-group list-group-flush">
      <div class="container">
        <div class="row align_items_start">
          <div class="col">
            Item
          </div>
          <div class="col">
            Expiration Date
          </div>
          <div class="col">
            
          </div>
        </div>
      </div>
      <% @items.each do |item| %>
        <% if item.days_to_expired(Date.today) > 2 %>
          <div class="container">
            <div class="row align_items_start">
              <div class="col">
                <li class="list-group-item list-group-item-success"><%= item.name %></li>
              </div>
              <div class="col">
                <li class="list-group-item list-group-item-success"><%= item.expiration_date %></li>
              </div>
              <div class="col">
                <li class="list-group-item"> <%= button_to "Delete Item", '/items', method: :delete, params: {id: item.id}  %></li>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </ul>
  </div>
  <h1>Recipe Suggestions</h1>
  <% @recipes.each do |recipe| %>
    <p><%= link_to "#{recipe.title}", recipe_path(recipe.id) %></p>
    <img src="<%= recipe.image %>" style="width:200px;height:230px" alt="Recipe Photo">
    <p>Likes: <%= recipe.likes %></p>
    <p>Fridge Ingredient(s) Count: <%= recipe.used_ingredients %></p>
    <p>Missing Ingredient(s) Count: <%= recipe.unused_ingredients %></p>
  <% end %>

<% end %>
</center>
